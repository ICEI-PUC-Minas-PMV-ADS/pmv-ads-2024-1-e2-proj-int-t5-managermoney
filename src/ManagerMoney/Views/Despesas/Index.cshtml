@model IEnumerable<ManagerMoney.Models.Despesa>

@{
    ViewData["Title"] = "Index";
}
<style>
    .formatacao {
        color: #C0C0C8;
        position: relative;
        background-color: #161629;
        display: flex;
        height: 10vh;
    }

    .table {
        color: #C0C0C8;
        position: relative;
        display: flex;
        flex-direction: column;
        font-size: 15pt;
        background-color: #1FBAD6;
        height: 50vh;
    }

    .table-line {
        width: 100%;
        height: 50px;
    }

    .container-img {
        background-color: #292929;
        width: 100%;
        height: 150px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .img {
        height: 100%;
        width: 20%;
    }
</style>
<body class="formatacao">
    <div class="container-img">
        <img class="img" src="~/Imagem do WhatsApp de 2024-04-28 à(s) 12.47.33_15ed54a0.jpg" alt="LogoMarca" />
    </div>
<h1 class="formatacao">Despesas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Criar 💵</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Km)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Veiculo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Km)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Veiculo.Cor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>