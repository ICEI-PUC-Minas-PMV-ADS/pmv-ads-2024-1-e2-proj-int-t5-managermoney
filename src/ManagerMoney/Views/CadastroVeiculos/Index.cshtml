@model IEnumerable<ManagerMoney.Models.Cadastroveiculo>

@{
    ViewData["Title"] = "Index";
}
<style>
    .formatacao {
        color: #C0C0C8;
        position: relative;
        background-color: #161629;
        display: flex;
        height: 10vh;
    }
    .table {
        color: #C0C0C8;
        position: relative;
        display: flex;
        flex-direction: column;
        font-size: 15pt;
        background-color: #1FBAD6;
        height: 50vh;
    }

    .table-line {
        width: 100%;
        height: 50px;
    }

    .container-img {
        background-color: #292929;
        width: 100%;
        height: 150px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .img {
        height: 20vh;
        width: 20%;
    }
</style>

<body class="formatacao">
    <div class="container-img">
        <img class="img" src="~/Imagem do WhatsApp de 2024-04-28 à(s) 12.47.33_15ed54a0.jpg" alt="LogoMarca" />
    </div>
<h1 class="formatacao">Cadastrar novo veículo</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"> Criar 🚗 </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fabricante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnoFabricacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnoModelo)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fabricante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoFabricacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoModelo)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>