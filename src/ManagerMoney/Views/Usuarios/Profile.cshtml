@model ManagerMoney.Models.Usuario

@{
    ViewData["Title"] = "Profile";
}
<style>
    .container {
        height: 100%;
    }
</style>

<div class="d-flex flex-column justify-content-start">
    <h1 class="text-center">Perfil do usuário</h1>

    <div class="d-flex justify-content-center">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cpf)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cpf)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rg)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rg)
            </dd>
        </dl>
    </div>
    <div class="d-flex justify-content-center">
        <a asp-action="Edit" class="btn btn-warning w-50" asp-route-id="@Model?.Id">Editar</a>
    </div>

</div>

