@model ManagerMoney.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<style>
    .formatacao {
        color: #C0C0C8;
        position: relative;
        background-color: #161629;
        display: flex;
        height: 10vh;
    }

    .table {
        color: #C0C0C8;
        position: relative;
        display: flex;
        flex-direction: column;
        font-size: 15pt;
        background-color: #1FBAD6;
        height: 50vh;
    }

    .table-line {
        width: 100%;
        height: 50px;
    }

    .container-img {
        background-color: #292929;
        width: 100%;
        height: 150px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .img {
        height: 20vh;
        width: 20%;
    }
</style>

<body class="formatacao">
    <div class="container-img">
        <img class="img" src="~/Imagem do WhatsApp de 2024-04-28 à(s) 12.47.33_15ed54a0.jpg" alt="LogoMarca" />
    </div>
<h1 class="formatacao">Login</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Logar" class="btn btn-success" /> |
                <input type="submit" value="Cadastrar-se" onclick="window.location='/Usuarios/create';" class="btn btn-primary" />
            </div>
            <p class="mb-4 text-sm mx-auto">
                Esqueceu a sua senha?
                <a asp-action="RedefinirSenha" asp-controller="Usuarios">Redefinir minha senha</a>
            </p>
        </form>
        <h3>@ViewBag.Message</h3>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>